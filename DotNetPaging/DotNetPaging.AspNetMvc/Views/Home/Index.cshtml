@model PagedResult<DotNetPaging.EF.PressRelease>
@using DotNetPaging
@{
    ViewBag.Title = "Home Page";
}

<h2>Default paging</h2>

<p>Results on this page are queried using Entity Framework.</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Company</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var release in Model.Results)
        {
            <tr>
                <td>@release.ReleaseDate.ToShortDateString()</td>
                <td>@release.Company</td>
                <td>@release.Title</td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("_Pager", Model)
